<card-group datasource="{page.state.selectedDS}" can-sort="true" show-refresh="true" disconnected="{!app.state.networkConnected}" refresh-disconnected-message="This feature is not available while offline" enable-barcode-scanner="true" readers="{[`ean_reader`]}" timeout="{45}" hide-count-search="{(page.state.selectedSwitch===1)}" id="poCardGroup">
  <filter-button slot="actions" kind="ghost" datasource="{page.state.selectedDS}" id="djzbd"/>
  <multi-sort-button slot="actions" kind="ghost" datasource="{page.state.selectedDS}" icon="Carbon:caret--sort" id="m2bpv"/>
  <approvals-card-template id="approvalscardtemplate" chevron-kind="{index === 0 ? 'ghost' : 'primary'}" slot="item" show-chevron="true" on-chevron-click="showPODetail" on-chevron-click-arg="{item}">
    <wrapped-text slot="slot1" size="large" label="{item.description}" sub-label="{item.ponum}" id="pocardNumDesc"/>
    <label slot="slot2" label="View Details" id="ggj_a"/>
    <box slot="slot3" direction="column" id="dk8jz">
      <field label="Type" value="{item.potype}" label-placement="top" hidden="{!item.potype}" id="pocardPOtype"/>
      <field label="Site" value="{item.siteid}" label-placement="top" id="pocardSite"/>
    </box>
    <wrapped-text slot="slot7" size="large" label="{item.revisionnum}" sub-label="{item.revcomments}" hidden="{!item.revisionnum}" id="pocardRevisions"/>
    <field slot="slot8" label="Vendor" value="{item.vendor}" hidden="{!item.vendor}" label-placement="top" id="pocardVendor"/>
    <button slot="slot12" icon="carbon:error" on-click="rejectPO" on-click-arg="{item}" kind="secondary" id="pocardRejectBtn"/>
    <button slot="slot13" icon="carbon:checkmark" on-click="approvePO" on-click-arg="{item}" id="pocardAcceptBtn" kind="primary"/>
  </approvals-card-template>
</card-group>