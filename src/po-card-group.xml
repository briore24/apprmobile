<card-group datasource="{page.state.selectedDS}" can-sort="true" show-refresh="true" disconnected="{!app.state.networkConnected}" refresh-disconnected-message="This feature is not available while offline" enable-barcode-scanner="true" readers="{[`ean_reader`]}" timeout="{45}" hide-count-search="{(page.state.selectedSwitch===1)}" id="poCardGroup">
    <filter-button slot="actions" kind="ghost" datasource="{page.state.selectedDS}" id="djzbd"/>
    <multi-sort-button slot="actions" kind="ghost" datasource="{page.state.selectedDS}" icon="Carbon:caret--sort" id="m2bpv"/>
    <card-template1 id="cardtemplate1" chevron-kind="{index === 0 ? app.state.highlightStop  ?  'ghost' : 'primary' : 'ghost' : 'ghost'}" slot="item" show-chevron="true" on-chevron-click="showPODetail" on-chevron-click-arg="{item}">
      <wrapped-text slot="slot1" size="large" label="{item.description}" sub-label="{item.potype}" id="n942w"/>
      <box slot="slot3" manage-children="false" id="cardAttrs">
         <label label="Vendor"/>
         <label label="{item.vendor}"/> 
      </box>
      <button-group padding="false" slot="slot4" id="bxek9" hidden="{app.state.hideFeature}">
        <!-- work log -->
        <button kind="secondary" icon="carbon:document" on-click="openWorkLogDrawer" on-click-arg="{{'item': item}}" id="workLogBtn"/>
        <!-- po lines -->
        <button kind="secondary" icon="carbon:list--numbered" on-click="openPOLineDetailPage" id="poLineBtn"/>
      </button-group>
      <button-group slot="slot5" padding="false" align="end" id="r9wq6">
        <!-- approve -->
        <button label="Approve" icon="carbon:play" loading="{item.ponum === page.state.currentItem &amp;&amp; page.state.loading}" on-click="changePurchaseorderStatus" on-click-arg="{{'item': item, status: 'POSTATUS|APPR'}}" kind="{index===0 ? page.state.firstLogin ? 'secondary' : 'primary' :'secondary'}" hidden="{item.status_maxvalue !== 'WAPPR'}" id="yjpma"/>
        <!-- view details -->
        <button label="View" icon="carbon:view" kind="{index===0 ? page.state.firstLogin ? 'secondary' : 'primary' :'secondary'}" hidden="{item.status_maxvalue === 'WAPPR'}" on-click="showPODetail" on-click-arg="{item}" id="qkx_r"/>
      </button-group>
    </card-template1>
</card-group> 