				<include name="priority2" />
			</run>
		</groups>
		<classes>
			<class name="com.ibm.maximo.technician.testcases.TestSuite" />
			<class name="com.ibm.maximo.technician.testcases.TaskTestSuite" />
		</classes>
	</test>
	<test thread-count="1" name="ActualToolsTest" preserve-order="true">
