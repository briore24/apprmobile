			<run>
				<include name="priority2" />
			</run>
		</groups>
		<classes>
			<class name="com.ibm.maximo.technician.testcases.TestSuite" />
			<class name="com.ibm.maximo.technician.testcases.ActualToolsTest" />
		</classes>
	</test>
</suite>
