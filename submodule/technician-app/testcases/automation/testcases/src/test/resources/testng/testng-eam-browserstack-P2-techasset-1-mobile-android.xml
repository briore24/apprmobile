<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="MobileTestSuite test run on Android device">
	<parameter name="configPath" value="src/test/resources/config.eam.browserstack.techasset91-dev.mobile.android.properties" />
	<parameter name="testType" value="mobileapp" />
	<listeners>
    	<listener class-name="com.ibm.maximo.technician.listener.ScreenShotListener" />
    	<listener class-name="com.ibm.maximo.technician.listener.FastFailClass"/>
	</listeners>
	<test thread-count="1" name="SortingAndFilteringTest" preserve-order="true">
		<groups>
			<run>
				<include name="priority2" />
			</run>
		</groups>
		<classes>
			<class name="com.ibm.maximo.technician.testcases.TestSuite" />
			<class name="com.ibm.maximo.technician.testcases.SortingAndFilteringTest" />
		</classes>
	</test>
	<test thread-count="1" name="CreateWorkOrderTestCaseTwo" preserve-order="true">
		<groups>
			<run>
				<include name="priority2" />
			</run>
		</groups>
		<classes>
			<class name="com.ibm.maximo.technician.testcases.TestSuite" />
			<class name="com.ibm.maximo.technician.testcases.CreateWorkOrderTestCaseTwo" />
		</classes>
	</test>

	<test thread-count="1" name="TaskWorkOrder" preserve-order="true">
		<groups>
			<run>
				<include name="priority2" />
			</run>
		</groups>
		<classes>
			<class name="com.ibm.maximo.technician.testcases.TestSuite" />
			<class name="com.ibm.maximo.technician.testcases.TaskWorkOrder" />
		</classes>
	</test>
	<test thread-count="1" name="TaskTestSuite" preserve-order="true">
