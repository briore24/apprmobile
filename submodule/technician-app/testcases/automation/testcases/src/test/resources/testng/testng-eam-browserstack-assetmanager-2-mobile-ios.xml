<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="MobileTestSuite test run on eam-browserstack-assetmanager-2-mobile-ios">
